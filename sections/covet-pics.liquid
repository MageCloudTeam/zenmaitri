
  <div class="covet-pics--section white-text">
    <div class="page-width">
      <h2 class="h1">{{ section.settings.title }}</h2>
      <div class="widget-code-block">{{ section.settings.html }}</div>
      <a href="{{ section.settings.url }}" class="btn btn--secondary white-text">{{ section.settings.link_text }}</a>
    </div>
  </div>

  <script>
    document.addEventListener("galleryReady:covetPics",function(e){var r=document.createElement("style");r.innerHTML="\n      .swiper-wrapper {margin-left: -14px;}\n      .swiper-slide img {border-radius: 10px;}\n      .swiper-slide {margin: 14px;margin-right: 0!important;}\n      covet-pics-gallery-item {border-radius: 10px;overflow: hidden;transition: .3s background-image,.3s box-shadow;}\n      covet-pics-gallery-item:hover {background-image: linear-gradient(#222222, #222222),linear-gradient(270deg, #905725 0%, #ECB68B 42.05%, var(--zmGold) 55.59%, #905725 100%);background-origin: border-box;background-clip: content-box, border-box;box-shadow: 0px 0px 15px 0px rgb(208 148 102 / 30%);}\n      ",document.querySelector("covet-pics-widget").shadowRoot.appendChild(r)});
    {%- comment -%}
    document.addEventListener('galleryReady:covetPics', function(e) {
      // prepare CSS styles to inject
      const stylesPopup = document.createElement('style');
      stylesPopup.innerHTML = `
      .swiper-wrapper {margin-left: -14px;}
      .swiper-slide img {border-radius: 10px;}
      .swiper-slide {margin: 14px;margin-right: 0!important;}
      covet-pics-gallery-item {border-radius: 10px;overflow: hidden;transition: .3s background-image,.3s box-shadow;}
      covet-pics-gallery-item:hover {background-image: linear-gradient(#222222, #222222),linear-gradient(270deg, #905725 0%, #ECB68B 42.05%, var(--zmGold) 55.59%, #905725 100%);background-origin: border-box;background-clip: content-box, border-box;box-shadow: 0px 0px 15px 0px rgb(208 148 102 / 30%);}
      `;
      // get Covet gallery elements where you want to inject CSS (for eg. covet-pics-widget, covet-pics-popup, covet-pics-upload)
      const popup = document.querySelector("covet-pics-widget");

      // now inject CSS code into shadow DOM
      popup.shadowRoot.appendChild(stylesPopup);
    });{%- endcomment -%}
  </script>

  {% schema %}
  {
    "name": "Covet Pics - Instagram",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Follow Us"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link Text",
        "default": "Go To Instagram"
      },
      {
        "type": "url",
        "id": "url",
        "label": "Link URL"
      },
      {
        "type": "html",
        "id": "html",
        "label": "Covet Pics Code",
        "info": "Paste the Covet Pics widget code here"
      }
    ],
    "presets": [
      {
        "name": "Covet Pics - Instagram",
        "category": "Social"
      }
    ]
  }
  {% endschema %}
