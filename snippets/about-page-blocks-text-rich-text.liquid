<div class="about-rich-text text-{{ block.settings.align_text }} about-has-margin">

  <div class="page-width{% if block.settings.narrow_column %} page-width--narrow{% endif %}">

    {%- if block.settings.text != blank -%}
      <div class="rte h3 about-rich-text__text">
        {{ block.settings.text }}
      </div>
    {%- endif -%}

    {%- if block.settings.title != blank -%}
        <p class="about-rich-text__title">{{ block.settings.title | escape }}</p>
    {%- endif -%}

    {%- if block.settings.link_text != blank -%}
      <div class="rte">
        <a href="{{ block.settings.link }}" class="arrow-link">
          {{ block.settings.link_text }}
        </a>
      </div>
    {%- endif -%}

  </div>
</div>
