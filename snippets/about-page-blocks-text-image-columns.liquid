<div class="about-text-columns--with-images about-has-margin">
  <div class="page-width">
    <div class="about-text-columns__wrapper">
      {% if block.settings.image != blank or block.settings.title != blank or block.settings.text != blank %}
        <div class="column">
            <div class="grid__item--wrap">
              {%- if block.settings.image != blank -%}
                <div class="image-wrap text-spacing grid__image-ratio grid__image-ratio--square">
                  {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                  <img class="lazyload border-10"
                      data-src="{{ img_url }}"
                      data-widths="[180, 360, 540, 720, 900, 1080]"
                      data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                      data-sizes="auto"
                      alt="{{ block.settings.image.alt }}">
                </div>
              {%- else -%}
                <div class="image-wrap text-spacing">{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}</div>
              {%- endif -%}
              {%- if block.settings.title != blank -%}
                <h3>{{ block.settings.title }}</h3>
              {%- endif -%}
              {%- if block.settings.text != blank -%}
                <div class="rte-setting text-spacing">{{ block.settings.text }}</div>
              {%- endif -%}
              {%- if block.settings.button_link != blank -%}
                <a href="{{ block.settings.button_link }}" class="arrow-link">
                  {{ block.settings.button_label }}
                </a>
              {%- endif -%}
            </div>
        </div>
      {% endif %}
