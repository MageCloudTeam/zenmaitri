{%- if block.settings.divider -%}
  <div class="page-width"><div class="section--divider">{% render 'svg-icon' with 'divider' %}</div></div>
{%- endif -%}


<div class="about-text-columns--with-images about-has-margin">
  <div class="page-width">
    {% if block.settings.title %}
    <div class="section-header text-center">
      <h2 class="h1">{{ block.settings.title }}</h2>
    </div>
    {% endif %}
    <div class="about-text-columns__wrapper">
      {% if block.settings.image_1 != blank or block.settings.title_1 != blank or block.settings.text_1 != blank %}
        <div class="column text-center">
            <div class="grid__item--wrap">
                {%- if block.settings.image_1 != blank -%}
                    <div class="image-wrap text-spacing grid__image-ratio grid__image-ratio--square">
                        {%- assign img_url = block.settings.image_1 | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                        <img class="lazyload border-10"
                             data-src="{{ img_url }}"
                             data-widths="[180, 360, 540, 720, 900, 1080]"
                             data-aspectratio="{{ block.settings.image_1.aspect_ratio }}"
                             data-sizes="auto"
                             alt="{{ block.settings.image_1.alt }}">
                    </div>
                {%- else -%}
                    <div class="image-wrap text-spacing">{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}</div>
                {%- endif -%}
                {%- if block.settings.title_1 != blank -%}
                    <h3>{{ block.settings.title_1 }}</h3>
                {%- endif -%}
                {%- if block.settings.text_1 != blank -%}
                    <div class="rte-setting text-spacing smaller-text">{{ block.settings.text_1 | newline_to_br }}</div>
                {%- endif -%}
                {%- if block.settings.button_link_1 != blank -%}
                    <a href="{{ block.settings.button_link }}" class="btn btn--secondary">
                        {{ block.settings.button_label_1 }}
                    </a>
                {%- endif -%}
            </div>
        </div>
      {% endif %}
